<form action="/addPark" method="POST">
  <div class="field">
    <label class="label">Enter Park Name</label> <input class="input" type="text" placeholder="parkName" name="parkName">
  </div>
  <div class="field">
    <div class="control">
      <input class="radio" type="radio" name="rating" value="1">Terrible
      <input class="radio" type="radio" name="rating" value="2"> Disliked
      <input class="radio" type="radio" name="rating" value="3"> Okay
      <input class="radio" type="radio" name="rating" value="4"> Great
      <input class="radio" type="radio" name="rating" value="5"> Loved
    </div>
     <div class="field">
    <label class="label">Latitude</label> <input class="input" type="text" placeholder="lat" name="lat">
  </div>
   <div class="field">
    <label class="label">Longitude</label> <input class="input" type="text" placeholder="lng" name="lng">
  </div>
  </div>
  <div class="field">
    <div class="select">
      <select name="county">
        {{#each counties }}
          <option> {{countyName}}</option>
        {{/each}}
      </select>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <button class="button is-link is-light">Add Park</button>
    </div>
  </div>
</form>